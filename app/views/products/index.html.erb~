<!--Блоки продуктов-->
<%= paginate @products %>
<div class="row">
<ul class="thumbnails">
  <% @products.each do |product| %>
  <li class="span4">
    <%= link_to product, :class =>"thumbnail" do %>
    <%= image_tag(product.image_url(:thumb)) %>
    <p><%= product.name %></p>
    <% end %>
  </li>
  <% end %>
</ul>
</div>
