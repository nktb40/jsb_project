<%= form_for([:admin, @product]) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :"Название:" %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :"Цена:" %>
    <%= f.number_field :price %>
  </div>
  <div class="field">
    <%= f.label :"Код товара:" %>
    <%= f.text_field :product_code %>
  </div>
  <div class="field">
    <%= f.label :"Статус товара:" %>
    <%= f.select(:product_status, 
    "<option>Shown</option><option>Hidden</option>".html_safe) %>
  </div>
  
  <div class="field">
   <%= f.label :"Изображение:" %>
   <p><%= image_tag(@product.image_url(:thumb)) class=> "img-polaroid" %> </p>
   <p><%= f.file_field :image %></p>
  </div>
  <div class="field">
    <%= f.label :"Описание:" %>
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
