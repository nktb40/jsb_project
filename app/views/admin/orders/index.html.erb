<div class="page-header">
  <h3>Таблица заказов</h3>
</div>

<table class="table table-striped">
  <tr>
    <th>№</th>
    <th>Id пользователя</th>
    <th>Имя заказчика</th>
    <th>Email</th>
    <th>Телефон</th>
    <th>Адрес</th>
    <th>Статус заказа</th>
  </tr>
<% @i = 0 %>
<% @admin_orders.each do |order| %>
  <tr>
  <% @i += 1 %>
  	 <td><%= @i %></td>
  	 <td><%= order.user_id %></td>
    <td><%= order.customer_name %></td>
    <td><%= order.email %></td>
    <td><%= order.phone %></td>
    <td><%= order.adress %></td>
    <td><%= order.status %></td>
    <td><%= link_to "Детали", [:admin, order] %></td>
  </tr>
<% end %>
</table>

<br />

